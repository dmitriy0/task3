<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_telegram_scene"
    android:background="#1C67D8"
    tools:context=".TelegramActivity">


    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/qr_code" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/back"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Дмитрий Севастьянов"
        android:singleLine="true"

        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="online"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <ImageView
        android:id="@+id/qr_code"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@id/search"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:srcCompat="@drawable/qr_code" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@id/more"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:srcCompat="@drawable/qr_code" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:srcCompat="@drawable/qr_code" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/avatar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DADADA"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPaddingTop="16dp"
                app:contentPaddingBottom="16dp"
                android:id="@+id/card_photo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/change_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set Profile Photo"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/change_photo"
                        app:layout_constraintTop_toTopOf="@id/change_photo"
                        app:layout_constraintBottom_toBottomOf="@id/change_photo"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_account"
                app:contentPaddingTop="16dp"
                app:contentPaddingBottom="16dp"
                app:contentPaddingLeft="16dp"
                app:layout_constraintTop_toBottomOf="@id/card_photo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/account"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="+7(999) 999-99-99" />

                    <TextView
                        android:id="@+id/change_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/phone"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="10sp"
                        android:text="Tap to change phone number" />
                    <View
                        android:id="@+id/view_phone"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/change_phone"/>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/view_phone"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="+7(999) 999-99-99" />

                    <TextView
                        android:id="@+id/change_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/username"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="10sp"
                        android:text="Tap to change phone number" />
                    <View
                        android:id="@+id/view_username"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/change_username"/>

                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/view_username"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="+7(999) 999-99-99" />

                    <TextView
                        android:id="@+id/change_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/bio"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="10sp"
                        android:text="Add a few words about yourself" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_settings"
                app:layout_constraintTop_toBottomOf="@id/card_account"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:contentPaddingTop="16dp"
                app:contentPaddingBottom="16dp"
                app:contentPaddingLeft="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_notify"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/settings"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications and Sounds"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_notify"
                        app:layout_constraintTop_toTopOf="@id/img_notify"
                        app:layout_constraintBottom_toBottomOf="@id/img_notify"/>
                    <View
                        android:id="@+id/view_notify"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_notify"
                        app:layout_constraintTop_toBottomOf="@id/img_notify"/>

                    <ImageView
                        android:id="@+id/img_security"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_notify"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy and Security"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_security"
                        app:layout_constraintTop_toTopOf="@id/img_security"
                        app:layout_constraintBottom_toBottomOf="@id/img_security"/>
                    <View
                        android:id="@+id/view_security"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_security"
                        app:layout_constraintTop_toBottomOf="@id/img_security"/>

                    <ImageView
                        android:id="@+id/img_storage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_security"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data and Storage"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_storage"
                        app:layout_constraintTop_toTopOf="@id/img_storage"
                        app:layout_constraintBottom_toBottomOf="@id/img_storage"/>
                    <View
                        android:id="@+id/view_storage"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_storage"
                        app:layout_constraintTop_toBottomOf="@id/img_storage"/>

                    <ImageView
                        android:id="@+id/img_chat_settings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_storage"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_chat_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat Settings"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_chat_settings"
                        app:layout_constraintTop_toTopOf="@id/img_chat_settings"
                        app:layout_constraintBottom_toBottomOf="@id/img_chat_settings"/>
                    <View
                        android:id="@+id/view_chat_settings"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_chat_settings"
                        app:layout_constraintTop_toBottomOf="@id/img_chat_settings"/>

                    <ImageView
                        android:id="@+id/img_chat_folders"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_chat_settings"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_chat_folders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat Folders"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_chat_folders"
                        app:layout_constraintTop_toTopOf="@id/img_chat_folders"
                        app:layout_constraintBottom_toBottomOf="@id/img_chat_folders"/>
                    <View
                        android:id="@+id/view_chat_folders"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_chat_folders"
                        app:layout_constraintTop_toBottomOf="@id/img_chat_folders"/>

                    <ImageView
                        android:id="@+id/img_devices"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_chat_folders"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_devices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Devices"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_devices"
                        app:layout_constraintTop_toTopOf="@id/img_devices"
                        app:layout_constraintBottom_toBottomOf="@id/img_devices"/>
                    <View
                        android:id="@+id/view_devices"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_devices"
                        app:layout_constraintTop_toBottomOf="@id/img_devices"/>

                    <ImageView
                        android:id="@+id/img_language"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_devices"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_language"
                        app:layout_constraintTop_toTopOf="@id/img_language"
                        app:layout_constraintBottom_toBottomOf="@id/img_language"/>



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_help"
                app:layout_constraintTop_toBottomOf="@id/card_settings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="68dp"
                android:layout_marginTop="16dp"
                app:contentPaddingTop="16dp"
                app:contentPaddingBottom="16dp"
                app:contentPaddingLeft="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_question"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/help"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask a Question"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_question"
                        app:layout_constraintTop_toTopOf="@id/img_question"
                        app:layout_constraintBottom_toBottomOf="@id/img_question"/>
                    <View
                        android:id="@+id/view_question"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_question"
                        app:layout_constraintTop_toBottomOf="@id/img_question"/>

                    <ImageView
                        android:id="@+id/img_faq"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_question"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_faq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telegram FAQ"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_faq"
                        app:layout_constraintTop_toTopOf="@id/img_faq"
                        app:layout_constraintBottom_toBottomOf="@id/img_faq"/>
                    <View
                        android:id="@+id/view_faq"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="@id/img_faq"
                        app:layout_constraintTop_toBottomOf="@id/img_faq"/>

                    <ImageView
                        android:id="@+id/img_policy"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/view_faq"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/qr_code" />
                    <TextView
                        android:id="@+id/text_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/img_policy"
                        app:layout_constraintTop_toTopOf="@id/img_policy"
                        app:layout_constraintBottom_toBottomOf="@id/img_policy"/>



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.motion.widget.MotionLayout>